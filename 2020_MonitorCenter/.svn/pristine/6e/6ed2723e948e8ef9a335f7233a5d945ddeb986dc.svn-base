package vn.htcjsc.news.services;

import java.util.ArrayList;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import vn.htcjsc.news.dao.CategoriesDaoIF;
import vn.htcjsc.news.model.Categories;

/**
 *
 * @author hoan
 */
@Service("cateSV")
public class CategoriesServiceImpl implements CategoriesService {

    @Autowired
    CategoriesDaoIF cateDao;

    @Override
    public ArrayList<Categories> listCategories() {
        return cateDao.listCategories();
    }

    @Override
    public ArrayList<Categories> view(int page, int maxRow, String name, String parentName, int status) {
        return cateDao.view(page, maxRow, name, parentName, status);
    }

    @Override
    public int count(String name, String parentName, int status) {
        return cateDao.count(name, parentName, status);
    }

    @Override
    public Categories findById(int id) {
        return cateDao.findById(id);
    }

    @Override
    public int create(Categories one) {
        return cateDao.create(one);
    }

    @Override
    public Categories update(Categories one) {
        return cateDao.update(one);
    }

    @Override
    public Categories delete(int id) {
        return cateDao.delete(id);
    }

    @Override
    public Categories delete(int id, String deletedBy) {
         return cateDao.delete(id, deletedBy);
    }

    @Override
    public ArrayList<Categories> listCateParent() {
        return cateDao.listCateParent();
    }

    @Override
    public ArrayList<String> listCate() {
        return cateDao.listCate();
    }

    @Override
    public Categories findByNum(int id) {
        return cateDao.findByNum(id);
    }

    @Override
    public Categories findByName(String name) {
        return cateDao.findByName(name);
    }

    @Override
    public Categories findForYoutube() {
        return cateDao.findForYoutube();
    }

    @Override
    public ArrayList<Categories> listCateParent(String string) {
        return cateDao.listCateParent(string);
    }
}
