<%@page contentType="text/html; charset=utf-8" %><%@taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<style rel="style/sheet">
    .select2-container .select2-choice > .select2-chosen {
        margin-right: 0px;
    }

    .select2-container .select2-choice span {
        margin-right: 0px;
    }
</style>
<div id="content">
    <div id="content-header">
        <div id="breadcrumb"><a href="<c:url value="/admin/index"/>" title="Go to Home" class="tip-bottom"><i class="icon-home"></i> Home</a> <a href="<c:url value="/admin/cate/list"/>" class="current">Quản lý Chuyên mục</a></div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12" ng-app="listCategoriesApp" ng-controller="categoriesCtrl" ng-init="init();">
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-align-justify"></i> </span>
                    </div>
                    <div class="widget-content nopadding">
                        <form id="from-list-module" action="${pageContext.request.contextPath}/admin/cate/list" method="POST" class="form-horizontal">
                            <div class="control-group">
                                <div class="controls">
                                    <span class="span1">Tên chuyên mục</span>
                                    <select ui-select2="{ allowClear: true}" ng-model="name" class="span2">
                                        <option value="">Name</option>
                                        <option ng-repeat="ag in cates" value="{{ag.name}}">{{ag.name}}</option>
                                    </select>
                                    &nbsp;&nbsp;&nbsp;&nbsp
                                    <span class="span1">Chuyên mục cha</span>
                                    <select ui-select2="{ allowClear: true}" ng-model="parentName" class="span2">
                                        <option ng-repeat="ag in cates | unique:'parentName'" value="{{ag.parentName}}">{{ag.parentName}}</option>
                                    </select>
                                    <span class="span1">Trạng thái</span>
                                    <select style="width: 200px;vertical-align: middle" ng-model="status">
                                        <c:forEach var="s" items="${lstatus}">
                                            <option value="${s.val}">${s.desc}</option>
                                        </c:forEach>
                                    </select>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls">
                                    <input type="button" ng-click="reloadFilter()" class="btn btn-success" value="Tìm kiếm"/>
                                    &nbsp;&nbsp;&nbsp;
                                    <input type="reset" ng-click="reset()" class="btn btn-warning" name="Reset Form" value="Làm mới"/>
                                    &nbsp;&nbsp;&nbsp;
                                    <input ng-if="roles.add" class="btn btn-primary" onclick="location.href = '<c:url value="/admin/cate/create" />'" value="Thêm mới" type="button">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="widget-box">
                    <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
                        <h5>Danh sách Chuyên mục<span id="result_model" class="callback_info">${result.message}</span>
                            <span class="callback_info">{{result.message}}</span></h5>
                    </div>
                    <div class="widget-content nopadding">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên chuyên mục</th>
                                    <th>Mô tả</th>
                                    <th>Số thứ tự</th>
                                    <th>Icon</th>
                                    <th>Chuyên mục cha</th>
                                    <th>Trạng thái</th>
                                    <th ng-if="roles.edit || roles.del">Sửa/Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="oneCate in datas">
                                    <td>{{$index + 1}}</td>                                    
                                    <td>{{oneCate.name}}</td>
                                    <td>{{oneCate.description}}</td>
                                    <td>{{oneCate.num}}</td>
                                    <td>{{oneCate.icon}}</td>
                                    <td>{{oneCate.parentName}}</td>
                                    <td class="img-center">
                                        <img ng-if="oneCate.status === ${status.UNACTIVE}" width="24" src="<c:url value="/admin/images/inactive.png"/>" alt="Active">
                                        <img ng-if="oneCate.status === ${status.ACTIVE}" width="24" src="<c:url value="/admin/images/active.png"/>" alt="Active">
                                        <img ng-if="oneCate.status === ${status.LOCK}" width="24" src="<c:url value="/admin/images/lock.png"/>" alt="Block">
                                    </td>
                                    <td ng-if="roles.edit || roles.del" class="img-center">
                                        <a ng-if="roles.edit" href="${pageContext.request.contextPath}/admin/cate/edit?id={{oneCate.id}}" >
                                            <img src="<c:url value="/admin/images/edit.png"/>" alt="Edit">
                                        </a>
                                        &nbsp;
                                        <a ng-if="roles.del" ng-click="delete(oneCate.id)" href="" title="Delete">
                                            <img src="<c:url value="/admin/images/remove.png"/>" alt="Delete">
                                        </a> 
                                    </td>
                                </tr>
                                <tr ng-if="totalRow > maxRow">
                                    <td colspan="9">
                                        <div class="pagination aalternate fr">
                                            <ul uib-pagination total-items="totalRow" ng-model="crPage" ng-change="pageChanged()" max-size="maxRow" items-per-page="maxRow" class="" boundary-links="true" num-pages="numPages"></ul>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="<c:url value='/admin/js/jquery.min.js'/>"></script> <!--Phan nay Phong khoa de xu ly select 2 voi angularJs-->
<script src="<c:url value='/admin/js/jquery.blockUI.js'/>"></script>
<script src="<c:url value='/admin/js/angular-ui-select2/select2o.js'/>"></script> <!--Phan nay Phong them de xu ly select 2 voi angularJs-->
<script src="<c:url value='/admin/js/angular-ui-select2/angular.js'/>"></script> <!--Phan nay Phong them de xu ly select 2 voi angularJs-->
<script src="<c:url value='/admin/js/angular-ui-select2/select2.js'/>"></script>
<script src="<c:url value='/admin/js/angular-datepicker/angular-datepicker.min.js'/>"></script> <!--Angular pickdate ver2-->
<script src="<c:url value='/admin/js/jquery.alerts.js'/>"></script>
<script src="<c:url value='/admin/js/ui-bootstrap-tpls-2.1.3.min.js'/>"></script>
<script src="<c:url value='/admin/js/bootstrap.min.js'/>"></script>
<script src="<c:url value='/admin/js/jquery-ui-1.12.1.js'/>"></script>
<script src="<c:url value='/admin/controller/Cate.js'/>"></script>